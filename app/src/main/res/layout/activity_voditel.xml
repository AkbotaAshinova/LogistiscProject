<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoditelActivity">

    <LinearLayout
        android:id="@+id/searchVoditel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchFieldVoditel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Начните вводить номер заказа"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/btnSearchVoditel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="507dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
                android:id="@+id/imageViewVoditel"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:background="#969696"/>

        <Button
            android:id="@+id/btnPokazatMarshrut"
            android:layout_width="402dp"
            android:layout_height="60dp"
            android:text="Показать маршрут" />

        <Button
            android:id="@+id/btnGruzDostavlenVoditel"
            android:layout_width="402dp"
            android:layout_height="60dp"
            android:text="Доставлено" />
    </LinearLayout>
</RelativeLayout>