<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoditelItemActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Номер заказа: "
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id1"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/id1" />

        <TextView
            android:id="@+id/id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_below="@+id/id1"
            android:text="Дата: " />

        <TextView
            android:id="@+id/id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/id1" />

    </RelativeLayout>

        <Button
            android:id="@+id/btnPokazatMarshrut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Показать маршрут" />

        <Button
            android:id="@+id/btnGruzDostavlenVoditel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Доставлено" />

</LinearLayout>